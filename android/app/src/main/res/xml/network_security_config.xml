<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <!-- Global default: no cleartext anywhere (HTTPS only) -->
  <base-config cleartextTrafficPermitted="false" />

  <!-- HTTPS-only for API domain -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">api.dynamico.cloud</domain>
    <!-- Certificate pinning temporarily disabled to restore functionality -->
  </domain-config>

  <!-- HTTPS-only for main app domain -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">dynamico.cloud</domain>
  </domain-config>

  <!-- HTTPS-only for lab7software -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">lab7software.com</domain>
  </domain-config>

  <!-- HTTPS-only for egybell-apps -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">egybell-apps.com</domain>
  </domain-config>
</network-security-config>
